{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "**/dont-commit/*"
    ]
  },
  "rulesDirectory": [
    "src"
  ],
  "rules": {
    "no-console": false,
    "interface-name": false,
    "member-access": false,
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-sort-keys": false,
    "max-classes-per-file": [
      false
    ],
    "array-type": [
      false
    ],
    "max-line-length": [
      true,
      150
    ],
    "variable-name": false,
    "no-shadowed-variable": false,
    "no-var-requieres": false
  }
}
